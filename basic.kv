                ScrollabelLabel:
                    Label:
                        canvas:
                            Color:
                                rgba: 0, 0, 1, 0.5
                            Rectangle:
                                pos: self.parent.width//8, self.y
                                size: (self.parent.width//4)*3, self.height
                        size: (self.parent.width//4)*3, (self.parent.height//4)*3
                        size_hint_y: None
                        text: "Just some stuff about myself ;)"
                        font_size: 20
                        text_size: (self.parent.width//4)*3, None
                        height: self.texture_size[1]

        BoxLayout:
            orientation: 'vertical'
            pos: (self.parent.width//6)*5, self.y
            canvas:
                Color:
                    rgba: 0, 1, 0, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                size_hint_y: None
                size: self.width, self.parent.height//6
                pos: self.x, (self.parent.height//6)*5
                text: 'Home'
                text_size: self.width, self.height
                font_size: 25
                on_release: app.root.current = 'home'
            Button:
                size_hint_y: None
                size: self.width, self.parent.height//6
                pos: self.x, (self.parent.height//6)*4
                text: 'About Me'
                text_size: self.width, self.height
                font_size: 25
                on_release: app.root.current = 'about_me'
